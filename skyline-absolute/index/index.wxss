view {
  flex-shrink: 0;
  display: flex;
  flex-direction: row;
}

.nav-bar {
  height: 64px;
  justify-content: center;
  align-items: center;
}

.scroll-view {
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 0;
}

.box {
  position: relative;
  flex-direction: column;
  width: 100vw;
  background: skyblue;
}

.absolute {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 200px;
  background: pink;
}