
page {
  display: flex;
  flex-direction: column;
  /** 最小高度填充满视口，方便设置页面背景色 */
  height: 100vh;
}

.scroll-view {
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 0;
}

.intro {
  margin: 30px;
  text-align: center;
}

.button {
	width: 100px;
	height: 100px;
	background: pink;
}

.time {
	flex-shrink: 0;
	font-size: 20px;
	line-height: 1;
	color: #B9BDC2;
}

.in-root-portal {
	position: absolute;
	left: 0;
	top: 60px;
}

.box {
	position: relative;
	width: 200px;
	height: 200px;
	background: skyblue;
	transition-property: background-color;
	transition-duration: 300ms;
}

.light {
	background: pink;
}
