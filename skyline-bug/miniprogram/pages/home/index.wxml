<modal id="modal" />

<page
  background="#f5f6f8"
  lower-threshold="215"
  refresher-enabled
  refresher-triggered="{{refresherTriggered}}"
>
  <list-view>
    <note-item
      wx:for="{{noteList}}"
      wx:for-item="item"
      wx:for-index="index"
      wx:key="uuid"
      list-item
      note="{{item}}"
      index="{{index}}"
      total="{{total}}"
      enable-longpress
      enable-sticky-on-top
      enable-swipe
      show-tag
      bind:changed="onNoteItemChanged"
      bind:deleted="onNoteItemDeleted"
      bind:stickyOnTop="onNoteItemStickyOnTop"
    />
  </list-view>
</page>
