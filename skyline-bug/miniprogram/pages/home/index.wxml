<modal id="modal" />

<page
  navigationBarTitleText="墨问便签"
  loaded="{{loaded}}"
  refresher-enabled
  refresher-triggered="{{refresherTriggered}}"
>
  <view class="header">
    <view class="title">
      <image class="title-cn" mode="heightFix" src="../../assets/icon/newsletter-title-cn.svg" />
      <image class="title-en" mode="heightFix" src="../../assets/icon/newsletter-title-en.svg" />
    </view>
    <view class="time">
      <view class="time-block" />
      <view class="time-week">周六</view>
      <view class="time-date">05/06</view>
    </view>
  </view>

  <view class="btn-show" bind:tap="show">点击显示输入框</view>

  <view wx:if="{{isShow}}">
    <textarea
      value="输入框"
      bind:input="onInput"
    />
  </view>

  <!-- hack -->
  <!-- <view class="container {{isShow ? 'show' : ''}}">
    <textarea
      value="输入框"
      bind:input="onInput"
    />
  </view> -->

  <view>输入结果：{{text}}</view>

