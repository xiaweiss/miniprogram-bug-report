.nav-bar {
  position: sticky;
  left: 0;
  right: 0;
  top: 0;
  z-index: 5001;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #f5f6f8;
}

.nav-bar-left {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.back {
  width: 40px;
  height: 44px;
  padding: 10px 12px 10px 16px;
  cursor: pointer;
}

.icon-back {
  width: 12px;
  height: 24px;
}

.home {
  width: 40px;
  height: 44px;
}

.icon-home {
  width: 20px;
  height: 20px;
  padding: 10px 12px 10px 18px;
}

.avatar {
  margin-left: 20px;
  border-radius: 50%;
}

.nav-bar-title {
  flex: 1;
  font-size: 17px;
  font-weight: 600;
  letter-spacing: 0.2px;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
