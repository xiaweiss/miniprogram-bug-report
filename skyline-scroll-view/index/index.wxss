page {
  display: flex;
  flex-direction: column;
  /** 最小高度填充满视口，方便设置页面背景色 */
  height: 100vh;
  /** 默认空出底部安全区 */
  border-bottom: env(safe-area-inset-bottom) solid transparent;
}

view {
  display: flex;
  flex-direction: row;
}

.nav-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 64px;
}

.scroll-view {
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 0;
  background: skyblue;
}

.not-found {
  flex: 1;
  display: flex;
  height: 100%;
  background: pink;
}