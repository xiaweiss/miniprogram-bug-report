page {
  display: flex;
  flex-direction: column;
  /** 最小高度填充满视口，方便设置页面背景色 */
  height: 100vh;
  /** 默认空出底部安全区 */
  border-bottom: env(safe-area-inset-bottom) solid transparent;
}

view {
  flex-shrink: 0;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
}

.nav-bar {
  justify-content: center;
  align-items: center;
  height: 64px;
  padding-top: 18px;
  background: #fff;
}

.scroll-view {
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 0;
}

.sticky-item {
  position: sticky;
  left: 0;
  top: 0;
  height: 100px;
  background: skyblue;
}

.item {
  height: 100px;
}

.sticky-header {
  display: flex;
  position: sticky;
  left: 0;
  top: 0;
  z-index: 10;
  flex-direction: column;
}

.container {
  flex-direction: column;
}